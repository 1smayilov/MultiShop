@model CreateOrderAddressDto

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/_UILayout.cshtml";
}

<div class="container-fluid">
    <div class="row">

            <div class="col-lg-8">
                <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Sifariş Çatdırılma Adresiniz</span></h5>
                <div class="bg-light p-30 mb-5">
                    <form action="/" method="post">
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label>Adınız</label>
                            <input class="form-control" type="text" asp-for="Name" placeholder="Elvin">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Soyadınız</label>
                            <input class="form-control" type="text" asp-for="Surname" placeholder="İsmayılov">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Email</label>
                            <input class="form-control" type="text" asp-for="Email" placeholder="numune@email.com">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Telefon Nömrəniz</label>
                            <input class="form-control" type="text" asp-for="Phone" placeholder="+994507753500">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Address Sətir 1</label>
                            <input class="form-control" type="text" asp-for="Detail1" placeholder="Əhməd Rəcəbli">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Address Sətir 2</label>
                            <input class="form-control" type="text" asp-for="Detail2" placeholder="Mənzil 12">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Ölkə</label>
                            <input class="form-control" type="text" asp-for="Country" placeholder="Azərbaycan">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Şəhər</label>
                            <input class="form-control" type="text" asp-for="City" placeholder="Bakı">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Rayon</label>
                            <input class="form-control" type="text" asp-for="District" placeholder="Səbayil">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Poçt Indeksi</label>
                            <input class="form-control" type="text" asp-for="ZipCode" placeholder="AZ0101">
                        </div>
                    </div>
                </form>
                </div>
            </div>


        <div class="col-lg-4">
            <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Sifariş Haqqında</span></h5>

            @await Component.InvokeAsync("_OrderSummaryComponentPartial")

            @await Component.InvokeAsync("_PaymentMethodComponentPartial")


        </div>


    </div>
</div>

